---
import BaseLayout from "../layouts/base-layout.astro";
import { Image } from "astro:assets";
import Link from "../components/link.astro";
const imageFiles = await Astro.glob("/src/static/images/gallery/*{jpeg,jpg,png,gif}");
---

<BaseLayout title="Home | Weibo Zhang">
    <div class="bg-dotted-blur -z-10"></div>
    <main class="">
        <div class="max-w-xl mx-auto">
            <h1 class="mt-8 mb-2 text-4xl tracking-wide text-center md:text-7xl font-cal font text-zinc-800">
                Weibo Zhang
            </h1>
            <p class="mb-4 text-sm font-light text-center text-zinc-800">
                Traveler | Software Developer | Photographer
            </p>
        </div>
        <div
            class="flex flex-col items-center justify-center max-w-2xl p-6 mx-auto my-8 border rounded-lg h-fit border-zinc-100"
        >
            <p class="text-sm leading-loose text-center sm:leading-loose sm:text-base text-zinc-800 text-balance">
                Hi, I'm Weibo. I'm a current college student studying Computer Science. In my free time, I am probably
                dreaming of travel plans, freestyling to music, programming passion projects, journaling, and being a
                homebody :D
            </p>

            <div class="flex flex-wrap justify-center gap-3 my-6">
                <Link
                    class="text-[#0e76a8]"
                    href="https://www.linkedin.com/in/weibozhang/"
                    icon="tabler:brand-linkedin"
                    label="LinkedIn"
                />
                <Link href="https://github.com/Theonlyhamstertoh" icon="tabler:brand-github" label="Github" />
                <Link
                    class="text-green-400"
                    href="https://open.spotify.com/user/eswggww5eu0qes3rs778hsrxj?si=8395e09dbdb34a56"
                    icon="tabler:brand-spotify-filled"
                    label="Spotify"
                />
                <Link
                    class="text-[#5865F2]"
                    href="https://discord.gg/sjNE8rPSMM"
                    icon="tabler:brand-discord-filled"
                    label="Discord"
                />
            </div>
        </div>

        <div class="max-w-6xl mx-auto columns-3xs">
            {
                imageFiles.map((img) => (
                    <Image
                        src={img.default}
                        width={800}
                        alt="Travel Photos I took during my time abroad and on road trips"
                        class={`mb-3 w-full rounded-md hover:rotate-2 transition hover:shadow-lg hover:outline outline-zinc-900 `}
                    />
                ))
            }
        </div>
        <div class="mx-auto max-w-md">
            <iframe
                style="border-radius:12px"
                src="https://open.spotify.com/embed/track/22RbBpcpvW5sZwnSyXesUh?utm_source=generator&theme=0"
                width="100%"
                height="152"
                allowfullscreen=""
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                loading="lazy"></iframe>
        </div>
    </main>
</BaseLayout>

<style>
    @font-face {
        font-family: "CalSans";
        src: url("/fonts/CalSans-SemiBold.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
</style>
